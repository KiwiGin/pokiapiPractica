@model pokiapiPractica.Models.Pokemon

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>
@*<img src="@Model.Sprites.FrontDefault" alt="@Model.Name" />*@
<p>ID: @Model.Id</p>
<h3>Habilidades:</h3>
<ul>
    @if (Model.Abilities != null && Model.Abilities.Any())
    {
        foreach (var ability in Model.Abilities)
        {
            <li>@ability.AbilityData.Name</li>

        }
    }
    else
    {
        <li>No se encontraron habilidades.</li>
// Mensaje en caso de que no haya habilidades
    }
</ul>
